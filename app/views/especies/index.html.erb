<p id="notice"><%= notice %></p>

<h1>Especies</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @especies.each do |especy| %>
      <tr>
        <td><%= especy.descricao %></td>
        <td><%= link_to 'Show', especy %></td>
        <td><%= link_to 'Edit', edit_especy_path(especy) %></td>
        <td><%= link_to 'Destroy', especy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

