<p id="notice"><%= notice %></p>

<h1>Tipo Solos</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_solos.each do |tipo_solo| %>
      <tr>
        <td><%= tipo_solo.descricao %></td>
        <td><%= link_to 'Show', tipo_solo %></td>
        <td><%= link_to 'Edit', edit_tipo_solo_path(tipo_solo) %></td>
        <td><%= link_to 'Destroy', tipo_solo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

